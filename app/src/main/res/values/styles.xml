<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <!-- Отключаем стандартный ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="SecondAppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primary_second</item>
        <item name="colorPrimaryDark">@color/primary_dark_second</item>
        <item name="colorAccent">@color/accent_second</item>
        <item name="android:textColorPrimary">@color/primary_text_second</item>
        <item name="android:textColorSecondary">@color/secondary_text_second</item>
    </style>

</resources>
